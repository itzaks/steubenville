@import 'nib'
global-reset()

color-white = #FFFBF5
color-black = #0A0A0C
color-accent = #fcff00

font-big = 2em
font-body = "Siri Core Regular", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif
font-heading = "Siri Core Bold", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif

@import '_industrial_theme'

html,body
  height: 100%
  
body
  background: color-black
  color: color-white
  height: 100%
  line-height: 1.5
  
a
  color: color-accent
  text-decoration: none
  padding: 0 0.2em
  
  &:hover
    color: color-white
  

    
.text-center
  text-align: center
  
.gray
  color: #313131

em
  font-style: italic
      
h1 
  text-align: center
  margin: 20px 0 40px
  font-size: 4em
  font-family:"Siri Core Bold", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif; font-weight:bold; font-style:normal;
  
  span
    color: color-black
    background: color-white
    display: inline-block
    padding: 0.2em 0.4em
    border: 0.1em solid color-black
    outline: 0.1em solid color-white

button,
.button
  border-color: color-accent
  color: color-accent
  display: inline-block
  
  &:hover
    background: color-black
    border-color: color-white
    color: color-white
        
#application
  max-width: 100%
  width: 100%
  margin: 0 auto
  height: 100%
  box-sizing: border-box
  padding: 2em 1em
  transition: all 300ms
  opacity: 0
  
  &.ready
    opacity: 1

  //border: 1em solid color-white
  
footer
  absolute: left 0 right 0
  bottom: 0
  padding-bottom: 0.2em
  text-align: center
  
  a
    margin: 0 0.2em
    display: inline-block
  
#content
  width: 100%
  height: 100%
  max-width: 820px
  margin: 0 auto
  
  article
    width: 100%
    max-width: 550px
    margin: 0 auto
    text-align: justify
    
    p
      margin-bottom: 0
      text-indent: 1em
      
      &:first-child
        text-indent: 0
    
.page
  position: relative
  top: 0
  transition: top 300ms ease-out
  height: 100%
  
  &.slide-away
    top: -100%
    
  &.index
    cursor: pointer
    
.screenreader
  visibility: hidden
  opacity: 0
  text-indent: -9999px
  height: 0
  overflow: hidden
    
#tweets
  text-align: center
  height: 100%
  opacity: 0
  transition: opacity 500ms
  
  .action
    letter-spacing: 0.1em
    opacity: 0.5
    
  .respond
    margin-top: 0.5em
  
  &.ready
    opacity: 1

  .tweet
    font-family:"Siri Core Bold", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif; font-weight:bold; font-style:normal;
    font-size: 3.2em
    margin-bottom: 20px
    line-height: 1.3
    opacity: 0
    transition: all 0
    top: -5px
    position: relative
    
    
    &.show
      opacity: 1
      top: 0
      transition: all 600ms ease-out
    
    
    