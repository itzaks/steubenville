@import 'nib'
global-reset()

color-white = #FFFBF5
color-black = #0A0A0C
color-accent = #fcff00
color-gray = rgb(111,111,111)

font-big = 2em
font-body = "Siri Core Regular", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif
font-heading = "Siri Core Bold", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif

@import '_industrial_theme'

html,body
  height: 100%
  
body
  background: color-black
  color: color-white
  height: 100%
  line-height: 1.5
  
  text-rendering: optimizeLegibility
  
a
  color: color-accent
  text-decoration: none
  padding: 0 0.2em
  
  &:hover
    color: color-white
  
.touch footer a
  text-decoration: underline
    
.text-center
  text-align: center
  
.gray
  color: color-gray

em
  font-style: italic
      
h1 
  text-align: center
  margin: 0.5em 0 0.5em
  font-size: 4em
  font-family:"Siri Core Bold", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif; font-weight:bold; font-style:normal;
  
  span
    color: color-black
    background: color-white
    display: inline-block
    padding: 0.2em 0.4em
    border: 0.1em solid color-black
    outline: 0.1em solid color-white

button,
.button
  border-color: color-accent
  color: color-accent
  display: inline-block
  letter-spacing: inherit
  font-family:"Siri Core Bold", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif; font-weight:bold; font-style:normal;
  text-transform: none
  font-size: 1.5em
  margin-bottom: 8px
  
  &:hover
    background: color-black
    border-color: color-white
    color: color-white
        
#application
  max-width: 100%
  width: 100%
  margin: 0 auto
  height: 100%
  box-sizing: border-box
  padding: 2em
  transition: all 300ms
  opacity: 0
  
  &.ready
    opacity: 1

  //border: 1em solid color-white
  
footer
  fixed: left 0 right 0
  bottom: 0
  padding: 1em
  
  li
    margin: 0 0.2em
    display: inline-block
    
    a
      color: inherit
  
#content
  width: 100%
  height: 100%
  max-width: 820px
  margin: 0 auto
  
  article
    width: 100%
    max-width: 410px
    text-align: left
    margin: 0 auto
    
    p
      margin-bottom: 0
      text-indent: 1em
      
      &:first-child
        text-indent: 0

.right
  float: right
  
.page
  position: relative
  top: 0
  transition: top 300ms cubic-bezier(0.680, -0.550, 0.265, 1.550)
  height: 100%
  
  &.slide-away
    top: -1000px !important
    
  &.index
    cursor: pointer
    position: absolute
    height: 780px
    top: 0
    bottom: 50px
    margin: auto
    left: 0 
    right: 0
    
    button
      font-size: 1.2em
      margin-top: 1em
      display: block
      width: 100%
    
    p a
      color: color-white
      text-decoration: underline
      
      &:hover
        color: color-accent
    
.screenreader
  visibility: hidden
  opacity: 0
  text-indent: -9999px
  height: 0
  overflow: hidden
    
#tweets
  text-align: center
  height: 100%
  opacity: 0
  transition: opacity 500ms
  
  .action
    
  .respond
    margin-top: 0.5em
  
  &.ready
    opacity: 1

  .tweet
    font-family:"Siri Core Bold", 'Lucida Sans Unicode', 'Lucida Sans', Tahoma, Verdana, sans-serif; font-weight:bold; font-style:normal;
    font-size: 3.2em
    margin-bottom: 20px
    line-height: 1.3
    opacity: 0
    transition: all 0
    top: -5px
    position: relative
    cursor: pointer
    
    &.show
      opacity: 1
      top: 0
      transition: all 600ms ease-out
    
@media screen and (max-width: 1500px)
  h1
    font-size: 3.5em
    
  body
    font-size: 16px
    
  .page.index
    height: 600px
    
@media screen and (max-width: 960px)
  h1
    font-size: 1.6em
    
    span
      display: block
      
  .page.index
    position: static
    height: auto
  
  #content
    margin-bottom: 50px
    height: auto
    
  .tweet
    font-size: 1.6em

  footer 
    padding: 0
    position: relative
    height: 100px
    
    
    li
      display: block
    
  .right
    margin-top: 1em
    float: none 
    
@media screen and (max-width: 640px)
  body
    font-size: 14px

  h1
    font-size: 1.5em
    margin-top: 0
    
  .action
    font-size: 0.8em
    
  button,.button
    font-size: 1.2em
  
  .page.index button
    font-size: 1em
    padding-bottom: 0.5em